# n8n Environment Configuration
# These settings fix deprecation warnings when running n8n locally

# SQLite configuration - use connection pooling
DB_SQLITE_POOL_SIZE=10

# Enable task runners (will be default in future)
N8N_RUNNERS_ENABLED=true

# Block environment variable access for security
N8N_BLOCK_ENV_ACCESS_IN_NODE=false

# Disable bare repos in Git Node for security
N8N_GIT_NODE_DISABLE_BARE_REPOS=true

# Enforce correct permissions on settings file
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# Optional: Set log level for development
# N8N_LOG_LEVEL=debug
